{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    // "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./scr/@types",
    ],
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ]
}